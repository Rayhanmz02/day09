<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR ACCOUNT"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivreg1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/acc" />

        <EditText
            android:id="@+id/etreg1"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:hint="username"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/ivreg2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/acc2" />

        <EditText
            android:id="@+id/etreg2"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:hint="name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/ivreg3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/etreg3"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:hint="password"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnreg1"
        android:layout_width="193dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CREATE"/>

    <TextView
        android:id="@+id/tvreg1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Already Have Account Please Login!"
        android:layout_gravity="center"/>

</LinearLayout>